{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },
  "ExternalServicesSettings": {
    "WonderfoodPagamentos": {
      "BaseUrl": "http://pgt-worker-service.default.svc.cluster.local",
      "PagamentoSolicitado": "/webhook/pagamentos/pagamento-solicitado"
    },
    "WonderfoodProducao": {
      "BaseUrl": "http://prd-worker-service.default.svc.cluster.local",
      "IniciarProducao": "/webhook/pedidos/iniciar-pedido"
    }
  },
  "AllowedHosts": "*"
}
